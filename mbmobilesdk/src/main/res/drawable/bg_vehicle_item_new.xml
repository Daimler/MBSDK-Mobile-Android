<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <shape>
            <solid android:color="@color/mb_white" />
            <stroke
                android:width="@dimen/mb_divider_height"
                android:color="@color/mb_divider_color" />
            <corners android:radius="15dp" />
        </shape>
    </item>

    <item>
        <shape>
            <solid android:color="@color/mb_grey_background" />
            <stroke
                android:width="@dimen/mb_divider_height"
                android:color="@color/mb_divider_color" />
            <corners android:radius="15dp" />
        </shape>
    </item>
</selector>