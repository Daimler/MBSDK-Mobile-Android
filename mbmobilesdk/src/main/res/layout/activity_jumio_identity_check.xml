<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.daimler.mbmobilesdk.jumio.identitycheck.IdentityCheckViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/mb_grey_background"
        tools:context=".identitycheck.IdentityCheckActivity">

        <com.daimler.mbuikit.widgets.layouts.MBElevatedLinearLayout
            android:id="@+id/country_selection_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.daimler.mbuikit.widgets.textviews.MBBody1TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/mb_margin_default"
                android:layout_marginTop="@dimen/mb_unit_x6_5"
                android:layout_marginEnd="@dimen/mb_margin_default"
                android:layout_marginBottom="@dimen/mb_margin_default"
                android:textColor="@color/mb_grey2"
                android:textAllCaps="true"
                android:gravity="start"
                android:text="@string/verification_document_exhibition_country" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="@dimen/mb_margin_default"
                android:layout_marginEnd="@dimen/mb_margin_default"
                android:background="@color/mb_grey3" />

            <com.daimler.mbuikit.widgets.loadingindicators.MBLoadingSpinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/mb_unit_x6_5"
                android:visibility="@{viewModel.loading}" />

            <Spinner
                android:id="@+id/countries"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/mb_margin_default"
                android:layout_marginTop="22dp"
                android:layout_marginEnd="@dimen/mb_margin_default"
                android:layout_marginBottom="@dimen/mb_margin_default"
                android:visibility="@{!viewModel.loading}"
                app:items="@{viewModel.countries}"
                app:selection="@{viewModel.defaultIndex}" />

        </com.daimler.mbuikit.widgets.layouts.MBElevatedLinearLayout>

        <com.daimler.mbuikit.widgets.layouts.MBElevatedConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/mb_margin_default"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/country_selection_container"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <com.daimler.mbuikit.widgets.textviews.MBBody1TextView
                android:id="@+id/doc_type_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/mb_margin_default"
                android:layout_marginTop="@dimen/mb_unit_x6_5"
                android:layout_marginEnd="@dimen/mb_margin_default"
                android:textColor="@color/mb_grey2"
                android:textAllCaps="true"
                android:gravity="start"
                android:text="@string/verification_document_type"
                android:visibility="@{!viewModel.loading}"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="@dimen/mb_margin_default"
                android:layout_marginEnd="@dimen/mb_margin_default"
                android:layout_marginTop="@dimen/mb_margin_default"
                android:background="@color/mb_grey3"
                android:visibility="@{!viewModel.loading}"
                app:layout_constraintTop_toBottomOf="@id/doc_type_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/type_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/mb_margin_large"
                android:visibility="@{!viewModel.loading}"
                app:liveItems="@{viewModel.documentTypes}"
                app:layout_constraintTop_toBottomOf="@id/divider"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <!-- TODO: take care after registration flow implementation -->
            <com.daimler.mbuikit.widgets.buttons.MBPrimaryTextButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/mb_margin_default"
                android:layout_marginEnd="@dimen/mb_margin_default"
                android:layout_marginBottom="@dimen/mb_margin_default"
                android:text="@string/general_button_legal_notices"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:visibility="gone"/>
        </com.daimler.mbuikit.widgets.layouts.MBElevatedConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>