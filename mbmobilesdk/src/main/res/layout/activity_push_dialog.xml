<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="model"
            type="com.daimler.mbmobilesdk.push.dialog.PushDialogViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/mb_default_background"
        android:minWidth="@dimen/mb_dialog_min_width"
        android:paddingBottom="@dimen/mb_unit_x2">

        <TextView
            android:id="@+id/tv_title"
            style="@style/MBTextAppearance.H4.Serif"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/mb_unit_x4"
            android:layout_marginTop="@dimen/mb_margin_default"
            android:layout_marginEnd="@dimen/mb_unit_x4"
            android:layout_marginBottom="@dimen/mb_margin_default"
            android:text="@{model.title}"
            android:visibility="@{model.title != null}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Feedback" />

        <TextView
            android:id="@+id/tv_message"
            style="@style/MBTextAppearance.Body1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/mb_unit_x4"
            android:layout_marginTop="@dimen/mb_margin_default"
            android:layout_marginEnd="@dimen/mb_unit_x4"
            android:gravity="center"
            android:text="@{model.message}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_title"
            tools:text="Bitte nehmen Sie sich Zeit, um eine kurze Umfrage zu beantworten." />

        <View
            android:id="@+id/view_divider"
            android:layout_width="0dp"
            android:layout_height="@dimen/divider_height"
            android:layout_marginStart="@dimen/mb_unit_x4"
            android:layout_marginTop="@dimen/mb_unit_x5"
            android:layout_marginEnd="@dimen/mb_unit_x4"
            android:background="@color/mb_divider_color"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_message" />

        <com.daimler.mbuikit.widgets.buttons.MBSecondaryTextButton
            android:id="@+id/btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/mb_margin_default"
            android:onClick="@{() -> model.onCancelClicked()}"
            android:text="@string/general_cancel"
            android:visibility="@{safeUnbox(model.cancelVisible)}"
            app:layout_constraintEnd_toStartOf="@id/btn_continue"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view_divider" />

        <com.daimler.mbuikit.widgets.buttons.MBPrimaryTextButton
            android:id="@+id/btn_continue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="@{() -> model.onContinueClicked()}"
            android:text="@string/general_ok"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/btn_cancel"
            app:layout_constraintTop_toTopOf="@id/btn_cancel" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>