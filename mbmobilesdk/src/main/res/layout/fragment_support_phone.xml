<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.PhoneFragment">

    <data>
        <variable
            name="model"
            type="com.daimler.mbmobilesdk.support.viewmodels.SupportPhoneViewModel"/>
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/ris_white">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:id="@+id/mbtv_call_description"
                style="@style/MBTextAppearance.Body1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/mb_unit_x3"
                android:layout_marginBottom="@dimen/mb_unit_x3"
                android:text="@string/rssm_call_text"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/mbbtn_call_support"/>

            <com.daimler.mbuikit.widgets.buttons.MBPrimaryButton
                android:id="@+id/mbbtn_call_support"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/mb_margin_default"
                android:layout_marginBottom="@dimen/mb_unit_x3"
                android:drawableStart="@drawable/ic_phone_white"
                android:paddingStart="16dp"
                android:paddingEnd="40dp"
                android:enabled="@{model.callButtonEnabled}"
                android:onClick="@{() -> model.callButtonClick()}"
                android:text="@string/rssm_call_button"
                android:textAllCaps="false"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/mbtv_call_description"
                app:layout_constraintBottom_toTopOf="@id/mbcl_additional_data_switch_container"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/mbcl_additional_data_switch_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="@{model.cacAdditionalDataEnabled}"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/mbbtn_call_support"
                app:layout_constraintBottom_toBottomOf="parent">

                <View
                    android:id="@+id/mb_divider_switch"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/mb_unit_x3"
                    android:layout_marginBottom="@dimen/mb_unit_x3"
                    android:background="@color/mb_divider_color"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/mbchk_additional_information"/>

                <com.daimler.mbuikit.widgets.switches.MBSwitch
                    android:id="@+id/mbchk_additional_information"
                    style="@style/MBTextAppearance.Body1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:checked="@{model.switchStatus}"
                    android:onCheckedChanged="@{(switch, checked) -> model.switchStatusChanged(checked)}"
                    android:text="@string/rssm_call_data_switch"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/mb_divider_switch"
                    app:layout_constraintBottom_toTopOf="@id/mbcl_phone_number_container"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/mbcl_phone_number_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="@{model.additionalDataVisible}"
                    tools:visibility="visible"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/mbchk_additional_information"
                    app:layout_constraintBottom_toTopOf="@id/mb_divider_switch_description">

                    <TextView
                        android:id="@+id/mbtv_enter_phone"
                        style="@style/MBTextAppearance.Body2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/mb_unit_x4"
                        android:layout_marginBottom="@dimen/mb_unit_x3"
                        android:text="@string/rssm_call_data_number_text"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toTopOf="@id/mbet_own_phone_number"/>

                    <EditText
                        android:id="@+id/mbet_own_phone_number"
                        style="@style/MBEditTextStyle"
                        android:layout_width="match_parent"
                        android:hint="@string/rssm_call_data_number_placeholder"
                        android:imeOptions="actionDone"
                        android:inputType="phone"
                        android:onTextChanged="@{model.onPhoneNumberChanged}"
                        android:text="@{model.ownPhoneNumber}"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/mbtv_enter_phone"
                        app:layout_constraintBottom_toTopOf="@id/mbtv_required_hint"/>

                    <TextView
                        android:id="@+id/mbtv_required_hint"
                        style="@style/MBHint"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/mb_unit_x3"
                        android:layout_marginBottom="@dimen/mb_unit_x2"
                        android:text="@string/rssm_message_form_label_required"
                        android:textColor="@color/mb_grey2"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/mbet_own_phone_number"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <View
                    android:id="@+id/mb_divider_switch_description"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/mb_unit_x3"
                    android:layout_marginBottom="@dimen/mb_unit_x3"
                    android:background="@color/mb_divider_color"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/mbcl_phone_number_container"
                    app:layout_constraintBottom_toTopOf="@id/mbtv_data_description"/>

                <TextView
                    android:id="@+id/mbtv_data_description"
                    style="@style/MBTextAppearance.Body1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/mb_unit_x3"
                    android:text="@string/rssm_call_data_explanation"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/mb_divider_switch_description"
                    app:layout_constraintBottom_toTopOf="@id/mbtv_what_data"
                    tools:textColor="@color/mb_black"/>


                <com.daimler.mbuikit.widgets.buttons.MBPrimaryTextButton
                    android:id="@+id/mbtv_what_data"
                    style="@style/MBTextAppearance.Body2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:drawableLeft="@drawable/ic_info_outline_small"
                    android:drawablePadding="8dp"
                    android:text="@string/rssm_call_data_hint"
                    android:textColor="#00AAFF"
                    android:onClick="@{() -> model.dataInformationClick()}"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/mbtv_data_description"
                    app:layout_constraintBottom_toBottomOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>