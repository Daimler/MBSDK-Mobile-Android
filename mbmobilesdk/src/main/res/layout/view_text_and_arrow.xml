<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:paddingBottom="@dimen/mb_margin_default"
    tools:parentTag="androidx.constraintlayout.widget.ConstraintLayout">

    <com.daimler.mbuikit.widgets.textviews.MBBody1TextView
        android:id="@+id/tv_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/mb_margin_default"
        android:layout_marginEnd="@dimen/mb_margin_default"
        android:paddingTop="@dimen/mb_margin_default"
        android:paddingBottom="@dimen/mb_margin_default"
        android:singleLine="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/iv_arrow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="App-Beschreibung" />

    <ImageView
        android:id="@+id/iv_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/mb_margin_default"
        android:src="@drawable/ic_chevron_right"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/mb_divider_height"
        android:background="@color/mb_divider_color"
        app:layout_constraintTop_toBottomOf="@id/tv_text" />

</merge>